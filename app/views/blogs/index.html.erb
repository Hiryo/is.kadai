<%= link_to 'New post', new_blog_path %>
<p><%= notice %></p>
<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Author</th>
    <th>Picture</th>
  </tr>
  <p><% @blogs.each do |blog| %></p>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= blog.user.name %></td>
    <td><%= image_tag blog.image.url if blog.image && blog.image.url %></td>
    <td><%= link_to 'Show details', blog_path(blog.id) %></td>
  </tr>
<% end %>
</table>
